        <div class="container">
            <h2>Add a New Language</h2>
            <div class="form-group">
                <select v-model="selectedLanguage">
                    <option v-for="language in languagesWithFlags" :key="language.code" :value="language">
                        {{ language.name }}
                    </option>
                </select>
                <button class="btn btn-success" @click="addLanguage">Add</button>
