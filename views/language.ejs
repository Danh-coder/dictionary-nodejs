            <h2>Current Languages</h2>
            <ul class="language-list">
                <li v-for="language in languages" :key="language.key">
                    <div class="language-info">
                        <img :src="language.imageUrl" :alt="language.name">
                        {{ language.name }}
                    </div>
                    <button @click="deleteLanguage(language.key)" class="btn-delete" v-show="language.key !== 'english'">
                        <i class="fa-solid fa-minus"></i>
                    </button>
                </li>
            </ul>
        </div>

